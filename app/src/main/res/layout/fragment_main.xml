<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff222222"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main">

    <Button
        android:id="@+id/button_adview_example"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:text="Spotx Ad"
        android:textColor="@android:color/white"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/text_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button_cookies"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:text="Cookie Info"
        android:textColor="@android:color/white"
        android:layout_below="@+id/button_test_suite"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/sdk_version_label"
        android:text="@string/sdk_version_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true" />

    <WebView
        android:id="@+id/webview_cookies"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/sdk_version_label"
        android:src="@drawable/spotx_logo_trans"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/text_title"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Test Suite"
        android:id="@+id/button_test_suite"
        android:layout_below="@+id/button_adview_example"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"/>

</RelativeLayout>
