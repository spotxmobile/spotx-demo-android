<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".main"
                android:padding="10dp">

    <Button
        android:id="@+id/button_adview_example"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:text="Ad Example"
        android:textColor="@color/spotxblue"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/button_inline_example"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:text="In Content Example"
        android:textColor="@color/spotxblue"
        android:textStyle="bold"
        android:layout_below="@+id/button_adview_example"
        android:layout_alignStart="@+id/button_adview_example"

        android:onClick="onClick"
        />

    <Button
        android:id="@+id/button_rewarded_video_example"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:text="Rewarded Video Example"
        android:textColor="@color/spotxblue"
        android:textStyle="bold"
        android:layout_below="@+id/button_inline_example"
        android:layout_alignStart="@+id/button_inline_example"

        android:onClick="onClick"
        />

    <Button
        android:id="@+id/button_testsuite"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:text="MRAID Tests"
        android:textStyle="bold"
        android:layout_below="@+id/button_rewarded_video_example"
        android:layout_alignStart="@+id/button_rewarded_video_example"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/button_debug"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:text="@string/debug_info"

        android:textStyle="bold"
        android:layout_below="@+id/button_testsuite"
        android:layout_alignStart="@+id/button_testsuite"
        android:onClick="onClick"
        />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:src="@drawable/spotx_logo_trans"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>